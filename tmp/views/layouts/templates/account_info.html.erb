					</div>
	    		</div><!-- end of main content -->
				<%if params[:show].blank?%>
					<div style="margin-left:500px;"><a href="/profile-information">Goto page</a></div>
				<%end%>	
	    	</div><!-- end of content center -->			
	 	</div><!-- end of content -->

</div><!-- end of page class -->
